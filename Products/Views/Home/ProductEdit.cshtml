@model PNN.ProductsApp.Web.Models.ProductDTO
@{
    Layout = null;
}

<div class="panel panel-default">
    <div id="pnlProductEditHead" class="panel-heading">Product modification</div>
    <div class="panel-body">
        @using (Html.BeginForm("", "", FormMethod.Post, new { role = "form", @class = "edit-form" }))
        {
            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { placeholder = "Enter name", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CategoryId)
                @Html.DropDownListFor(m => m.CategoryId, new List<SelectListItem>(), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CategoryId)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { placeholder = "Enter description", @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Description)
            </div>
            <div class="form-group">
                <div style="position:relative;">
                    <a class='btn btn-primary' href='javascript:;'>
                        Choose File...
                        <input id="fileInput" type="file" name="file_source" size="40" onchange='$("#upload-file-info").html($(this).val()); readFileAsBase64("fileInput", "#img");'
                               class="file-input" >
                    </a>
                    &nbsp;
                    <span class='label label-info' id="upload-file-info"></span><br/><br />
                    <img id="img" src="" accept="image/*" class="img-thumbnail" width="100" />
                </div>
            </div>
            <div class="form-group pull-right">
                <button class="btn btn-default" type="button" id="btnCategoryEditCancel">Calcel</button>
                <button class="btn btn-default" type="button" id="btnCategoryEditSubmit">Submit</button>
            </div>
        }
    </div>
</div>
